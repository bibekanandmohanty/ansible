---
 - hosts: all
   gather_facts: false
   tasks:
    - yum:
        name: httpd
        state: present
    - service:
        name: httpd
        state: started
    - shell: systemctl status httpd
      register: service
    - debug: 
        var: service.stdout
    - copy:
        content: hello this is a file created by bibekanand
        dest: /var/www/html/ndex.html
    - service:
        name: httpd
        state: restart

                    
